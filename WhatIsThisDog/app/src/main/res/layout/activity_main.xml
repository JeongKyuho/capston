<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:weightSum="10"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/b_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_selector"
                android:paddingLeft="40dp"
                android:paddingTop="40dp"
                android:paddingRight="50dp"
                android:paddingBottom="50dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_camera" />

            <TextView
                android:id="@+id/buttonText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:enabled="false"
                android:gravity="bottom|center_horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="CAMERA"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5">

            <ImageButton
                android:id="@+id/b_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_selector"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_album" />

            <TextView
                android:id="@+id/buttonText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:enabled="false"
                android:gravity="bottom|center_horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="ALBUM"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5">

            <ImageButton
                android:id="@+id/b_matching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_selector"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_ranking" />

            <TextView
                android:id="@+id/buttonText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:enabled="false"
                android:gravity="bottom|center_horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="MATCHING"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5">

            <ImageButton
                android:id="@+id/b_dictionary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_selector"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_dict" />

            <TextView
                android:id="@+id/buttonText4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:enabled="false"
                android:gravity="bottom|center_horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="DICTIONARY"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5">

            <ImageButton
                android:id="@+id/b_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_button_selector"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_category" />

            <TextView
                android:id="@+id/buttonText5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:enabled="false"
                android:gravity="bottom|center_horizontal"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:text="CATEGORY"
                android:textColor="@color/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>