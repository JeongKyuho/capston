<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="10"
    tools:context=".Activity.MainActivity">

    <Button
        android:id="@+id/b_camera"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/round_res"
        android:text="camera"
        android:textColor="@color/mainTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/b_matching"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_res"
        android:text="matching"
        android:textColor="@color/mainTextColor"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/b_camera"
        app:layout_constraintTop_toBottomOf="@+id/b_camera"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/b_dictionary"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_res"
        android:text="dictionary"
        android:textColor="@color/mainTextColor"
        app:layout_constraintEnd_toEndOf="@+id/b_camera"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/b_camera"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/b_album"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_res"
        android:text="album"
        android:textColor="@color/mainTextColor"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/b_matching"
        app:layout_constraintTop_toBottomOf="@+id/b_matching"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/b_category"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_res"
        android:text="category"
        android:textColor="@color/mainTextColor"
        app:layout_constraintEnd_toEndOf="@+id/b_dictionary"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/b_dictionary"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>