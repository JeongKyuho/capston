<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_border"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/rankImage"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/mainColor" />

        <ImageView
            android:id="@+id/rankDogImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/tabTextDefault" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/mainColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:weightSum="10">

            <TextView
                android:id="@+id/rank_txt_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="~~%"
                android:textColor="@color/mainTextColor"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/rank_txt_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_margin="2dp"
                android:layout_weight="7"
                android:gravity="center"
                android:padding="3dp"
                android:text="New Text"
                android:textColor="@color/mainTextColor"
                android:textSize="20dp" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@color/mainColor" />

        <TextView
            android:id="@+id/rank_txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_color_res"
            android:gravity="center|top"
            android:padding="10dp"
            android:text="TextView" />

    </LinearLayout>

</LinearLayout>
